<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextCompose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_compose</item>
        <item name="android:layout_marginTop">@dimen/margin_compose_top</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextCompose">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textSize">@dimen/textsize_compose</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">@dimen/margin_compose_edittext_start</item>
    </style>

</resources>